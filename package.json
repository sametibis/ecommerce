{
  "name": "ibishop",
  "version": "1.0.0",
  "description": "A practical shopping application developed with MERN.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server",
    "server": "nodemon server/server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node server/seeder",
    "data:destroy": "node server/seeder -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sametibis/ibishop.git"
  },
  "author": "sametibis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sametibis/ibishop/issues"
  },
  "homepage": "https://github.com/sametibis/ibishop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "mongoose": "^5.10.13"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
